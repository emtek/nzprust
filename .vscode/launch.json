    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "terminal": "console",
            "name": "Debug",
            "cargo": {
                "args": [
                    "build",
                    "--bin=backend",
                    "--package=backend",
                    "--manifest-path=${workspaceFolder}/backend/Cargo.toml"
                ],
                "filter": {
                    "name": "backend",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/backend",
        },
        {
            "name": "Launch frontend",
            "type": "PowerShell",
            "request": "launch",
            "script": "./debug.ps1",
            "cwd": "${cwd}/frontend"
        },
        {
            "type": "lldb",
            "request": "launch",
            "terminal": "console",
            "name": "Debug tests",
            "cargo": {
                "args": [
                    "test",
                    "--manifest-path=${workspaceFolder}/backend/Cargo.toml"
                ],
                "filter": {
                    "name": "backend",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/backend",
        },
    ]
}