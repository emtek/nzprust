    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "preLaunchTask": "cwd",
            "name": "Debug executable 'testrun'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=testrun",
                    "--package=testrun"
                ],
                "filter": {
                    "name": "testrun",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/testrun",
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "cwd",
            "cargo": {
                "args": [
                    "-C /testrun"
                ],
                "filter": {
                    "name": "testrun",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug integration test 'ranking_tests'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--test=ranking_tests",
                    "--package=testrun"
                ],
                "filter": {
                    "name": "ranking_tests",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}/testrun"
        }
    ]
}